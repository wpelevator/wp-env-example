{
	"private": true,
	"workspaces": [
		"wp-content/plugins/my-plugin",
		"wp-content/themes/my-theme"
	],
	"dependencies": {
		"@wordpress/env": "^10.14.0"
	},
	"devDependencies": {
		"npm-run-all2": "^7.0.2"
	},
	"scripts": {
		"start": "wp-env start --xdebug",
		"stop": "wp-env stop",
		"stop-all": "docker stop $(docker ps -a -q)",
		"logs": "wp-env logs",
		"env": "wp-env",
		"cli": "wp-env run cli",
		"shell": "wp-env run cli bash",
		"wp": "wp-env run cli wp",
		"build": "npm-run-all2 build:*",
		"build:workspaces": "npm run build --workspaces",
		"test": "npm-run-all2 test:*",
		"test:workspaces": "npm run test --workspaces",
		"test:project": "wp-env run tests-cli --env-cwd=tests ../wp-content/vendor/bin/phpunit"
	}
}
